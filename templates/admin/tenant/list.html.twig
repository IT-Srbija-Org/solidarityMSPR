{% extends 'admin/base.html.twig' %}
{% from "macro.html.twig" import pagination %}

{% block title %}Tenants{% endblock %}

{% block content %}
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold">Tenants</h1>
        <a href="{{ path('admin_tenant_new') }}" class="btn btn-primary">Create new</a>
    </div>

    <div class="mt-4">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Search</button>
        {{ form_end(form) }}
    </div>

    <div class="overflow-x-auto mt-4">
        <table class="table table-zebra w-full">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tenant in tenants %}
                <tr>
                    <td>{{ tenant.id }}</td>
                    <td>{{ tenant.name }}</td>
                    <td>{{ tenant.description }}</td>
                    <td>
                        <a href="{{ path('admin_tenant_edit', {'id': tenant.id}) }}" class="btn btn-sm btn-outline">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ pagination('admin_tenant_list', (tenants.count / 20)|round(0, 'ceil'), app.request.query.get('page', 1)) }}
{% endblock %}
